                  <TableColumn fx:id="mailColumn" prefWidth="75.0" text="E-mail" />
                  <TableColumn fx:id="passColumn" prefWidth="75.0" text="Contraseña" />
                  <TableColumn fx:id="nacionalidadColumn" prefWidth="75.0" text="Nacionalidad" />
               </columns>
